{
	"name" : "acos5_64",
	"description" : "ACS ACOS5-64/CryptoMate64/Nano driver/SM/PKCS#15 external module for the OpenSC framework",
	"license": "LGPL-2.1",
	"copyright": "Copyright © 2017, Carsten Blüggel",
	"authors": ["Carsten Blüggel"],
	"homepage": "https://github.com/carblue/acos5_64",
	"dependencies" : {
		"opensc": "==0.15.13"
	},
	"subConfigurations": {
		"opensc": "deimos"
	},
	"targetName": "acos5_64",
	"targetPath": "lib",
	"targetType": "dynamicLibrary",
	"buildRequirements" : ["disallowDeprecations"],

	"dflags-posix-dmd": ["-defaultlib=libphobos2.so", "-mcpu=native"],
	"dflags-posix-ldc": ["-defaultlib=:libphobos2-ldc.so,:libdruntime-ldc.so"],
	"dflags-posix-gdc": ["-shared-libphobos"],

	"lflags-posix" : ["--no-undefined", "--version-script=lib/libacos5_64.ver"],
	"flags-posix-concerning_ldc_gdc" : ["ldc built with cmake -DBUILD_SHARED_LIBS=ON; gdc build with --enable-shared"],
	"configurations": [
		{
			"name": "library",
			"versions": ["ACOSMODE_V2", "REINIT_ACOSMODE_V2", "SESSIONKEYSIZE24"]
		},
		{
			"name": "unittest",
			"versions": ["ACOSMODE_V2", "REINIT_ACOSMODE_V2", "SESSIONKEYSIZE24", "ENABLED_DEBUG_FILE"],
			"dependencies": {
				"pkcs11": "*"
			},
			"subConfigurations": {
				"pkcs11": "derelict"
			}
		}
	]
}
